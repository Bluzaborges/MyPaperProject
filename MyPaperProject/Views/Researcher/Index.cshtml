@section Scripts{
    <script src="~/js/Researcher.js"></script>
}

<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-2">
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Pesquisadores</h5>
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                <li class="breadcrumb-item">
                    <a href="/Researcher" class="text-muted">Pesquisadores</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid ml-8 mr-8">
    <div class="card-body p-0 position-relative overflow-hidden">
        <div class="card card-custom" style="width: 100%;">
            <div class="card-header border-0 py-5">
                <div class="card-toolbar" style="width:100%">

                    <div class="col-8" style="text-align:center; padding-right:15px; padding-left:0; ">
                    </div>

                    <div class="col-4">
                        <div class="row">

                            <div style="text-align:right; padding-right:0; padding-left:0">
                                <a href="@Url.Action("Register", "Researcher")" class="btn btn-icon btn-bg-light btn-icon-success btn-hover-success mr-2">
                                    <i class="flaticon2-add-1"></i>
                                </a>
                            </div>

                            <div class="input-icon">
                                <input type="text" class="form-control" placeholder="Pesquisar..." id="kt_datatable_search_query" />
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <div class="card-body py-1" style="padding-bottom: 2.25rem !important;" id="researcher-table">
                <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
            </div>
        </div>
    </div>
</div>
